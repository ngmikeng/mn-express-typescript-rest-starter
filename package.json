{
  "name": "mn-express-typescript-rest-starter",
  "version": "0.0.1",
  "description": "Express and typescript rest api starter project",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "start-debug": "npm run build && npm run serve-debug",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "serve": "nodemon dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "mocha -r ts-node/register test/**/*.test.ts"
  },
  "keywords": [
    "nodejs",
    "expressjs",
    "typescript",
    "starter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ngmikeng/mn-express-typescript-rest-starter"
  },
  "author": "Minh Nguyen <ngmikeng@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-joi-validation": "^3.0.0",
    "express-jwt": "^5.3.1",
    "helmet": "^3.12.1",
    "http-status": "^1.2.0",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^2.3.10",
    "mongoose": "^5.1.5",
    "morgan": "^1.9.0",
    "serialize-error": "^4.1.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.4",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "0.0.40",
    "@types/hapi__joi": "^15.0.3",
    "@types/helmet": "0.0.38",
    "@types/http-status": "^0.2.30",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/method-override": "0.0.31",
    "@types/mocha": "^5.2.3",
    "@types/mongoose": "^5.0.16",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.3.3",
    "@types/supertest": "^2.0.4",
    "@types/swagger-jsdoc": "0.0.2",
    "chai": "^4.1.2",
    "concurrently": "^3.6.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "supertest": "^3.1.0",
    "swagger-jsdoc": "^1.9.7",
    "swagger-ui-express": "^3.0.10",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^3.2.2"
  }
}
