    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "helmet": "^3.12.1",
    "http-status": "^1.2.0",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
